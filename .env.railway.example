# Railway Backend Environment Variables
# Copy these to Railway's environment variables

# Server Configuration
NODE_ENV=production
PORT=3000

# Database
SUPABASE_URL=https://twigokrtbvigiqnaybfy.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# VAPI (now Apex) Integration
VAPI_API_KEY=your_vapi_api_key_here
VAPI_WEBHOOK_SECRET=your_vapi_webhook_secret_here

# Stripe Payments
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Email Service (optional - Resend or Sendgrid)
RESEND_API_KEY=your_resend_api_key_here

# Twilio (optional - for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Redis (for queue management - optional)
REDIS_URL=redis://default:password@host:6379

# CORS Settings
FRONTEND_URL=https://apex-platform.netlify.app
ALLOWED_ORIGINS=https://apex-platform.netlify.app,http://localhost:5522

# API Keys for Platform
API_KEY_SALT=your_random_salt_here
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100