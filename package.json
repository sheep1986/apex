{
  "name": "apex-ai-calling-platform",
  "version": "1.0.0",
  "description": "Apex AI Calling Platform - Complete AI-powered calling solution",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:frontend\" \"pnpm run dev:backend\"",
    "dev:frontend": "cd apps/frontend && pnpm run dev",
    "dev:backend": "cd apps/backend && pnpm run dev",
    "build": "pnpm run build:shared && pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "cd apps/frontend && pnpm run build",
    "build:backend": "cd apps/backend && pnpm run build",
    "build:shared": "cd packages/shared && pnpm run build",
    "install:all": "pnpm install",
    "clean": "rm -rf apps/*/node_modules packages/*/node_modules node_modules",
    "lint": "pnpm run --recursive lint",
    "typecheck": "pnpm run --recursive typecheck",
    "test": "pnpm run --recursive test",
    "dev:docs": "cd apps/docs && pnpm run dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "axios": "^1.11.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@supabase/supabase-js": "^2.52.1",
    "dotenv": "^16.3.1"
  }
}