@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 222.2 47.4% 11.2%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96%;
    --secondary-foreground: 222.2 84% 4.9%;
    --muted: 210 40% 96%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96%;
    --accent-foreground: 222.2 84% 4.9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 222.2 84% 4.9%;
    --radius: 0.5rem;
    --chart-1: 12 76% 61%;
    --chart-2: 173 58% 39%;
    --chart-3: 197 37% 24%;
    --chart-4: 43 74% 66%;
    --chart-5: 27 87% 67%;
    
    /* Hot Pink Colors for Progress Bars */
    --hot-pink: 330 100% 50%;
    --hot-pink-dark: 330 100% 40%;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 210 40% 98%;
    --primary-foreground: 222.2 47.4% 11.2%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 212.7 26.8% 83.9%;
    --chart-1: 220 70% 50%;
    --chart-2: 160 60% 45%;
    --chart-3: 30 80% 55%;
    --chart-4: 280 65% 60%;
    --chart-5: 340 75% 55%;
  }
}

/* Hot Pink Progress Bar Styles */
.progress-hot-pink {
  background: linear-gradient(to right, rgb(236, 72, 153), rgb(219, 39, 119));
}

/* Ensure all progress indicators use hot pink */
[role="progressbar"] > div,
[data-state="loading"] > div,
.bg-gradient-to-r.from-brand-pink,
.bg-gradient-to-r.from-brand-magenta {
  background: linear-gradient(to right, rgb(236, 72, 153), rgb(219, 39, 119)) !important;
}

/* Override any emerald progress bars */
.bg-emerald-500,
.bg-emerald-600,
.from-emerald-400.to-emerald-600,
.from-emerald-500.to-emerald-700 {
  background: linear-gradient(to right, rgb(236, 72, 153), rgb(219, 39, 119)) !important;
}

/* Progress bar track styling */
[role="progressbar"] {
  @apply bg-zinc-800 !important;
}

/* ===== APEX PREMIUM DESIGN SYSTEM ===== */
:root {
  /* Premium Emerald Green Palette */
  --apex-emerald-50: #ecfdf5;
  --apex-emerald-100: #d1fae5;
  --apex-emerald-200: #a7f3d0;
  --apex-emerald-300: #6ee7b7;
  --apex-emerald-400: #34d399;
  --apex-emerald-500: #10b981;
  --apex-emerald-600: #059669;
  --apex-emerald-700: #047857;
  --apex-emerald-800: #065f46;
  --apex-emerald-900: #064e3b;
  
  /* Premium Dark Background Gradients */
  --apex-dark-gradient: linear-gradient(135deg, #0a0a0a 0%, #0f1419 100%);
  --apex-surface-gradient: linear-gradient(135deg, #111111 0%, #1a1a1a 100%);
  --apex-card-gradient: radial-gradient(at top left, rgba(16, 185, 129, 0.1), transparent 50%);
  
  /* Glass Morphism Effects */
  --apex-glass: rgba(255, 255, 255, 0.02);
  --apex-glass-border: rgba(255, 255, 255, 0.05);
  --apex-glass-hover: rgba(255, 255, 255, 0.04);
  
  /* Premium Text Colors */
  --apex-text-primary: #ffffff;
  --apex-text-secondary: rgba(255, 255, 255, 0.7);
  --apex-text-muted: rgba(255, 255, 255, 0.5);
  --apex-text-accent: #10b981;
  
  /* Clean Shadows - No Glows */
  --apex-shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.4);
  --apex-shadow-md: 0 4px 20px rgba(0, 0, 0, 0.5);
  --apex-shadow-lg: 0 8px 40px rgba(0, 0, 0, 0.6);
}

/* ===== GLOBAL RESET & BASE ===== */
* {
  box-sizing: border-box;
  border: none !important;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

*:focus {
  outline: none !important;
}

html {
  font-size: 16px;
  scroll-behavior: smooth;
  height: 100%;
}

body {
  margin: 0;
  padding: 0;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  background: var(--apex-dark-gradient);
  color: var(--apex-text-primary);
  line-height: 1.6;
  min-height: 100vh;
  overflow-x: hidden;
}

#root {
  min-height: 100vh;
  background: transparent;
}

/* ===== PREMIUM TYPOGRAPHY ===== */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Space Grotesk', sans-serif;
  font-weight: 600;
  letter-spacing: -0.02em;
  color: var(--apex-text-primary);
}

h1 {
  font-size: 3.5rem;
  line-height: 1.1;
  background: linear-gradient(135deg, #ffffff 0%, #10b981 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

h2 {
  font-size: 2.5rem;
  line-height: 1.2;
}

h3 {
  font-size: 1.875rem;
  line-height: 1.3;
}

p {
  color: var(--apex-text-secondary);
  font-size: 1rem;
  line-height: 1.7;
}

/* ===== PREMIUM CARDS - NO BORDERS ===== */
.card, [class*="card"] {
  background: var(--apex-glass) !important;
  backdrop-filter: blur(20px) !important;
  -webkit-backdrop-filter: blur(20px) !important;
  border-radius: 20px !important;
  border: none !important;
  box-shadow: var(--apex-shadow-md) !important;
  overflow: hidden !important;
  position: relative !important;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

.card::before, [class*="card"]::before {
  content: '';
  position: absolute;
  inset: 0;
  background: var(--apex-card-gradient);
  opacity: 0;
  transition: opacity 0.4s ease;
  pointer-events: none;
}

.card:hover, [class*="card"]:hover {
  transform: translateY(-4px) !important;
  box-shadow: var(--apex-shadow-lg) !important;
}

.card:hover::before, [class*="card"]:hover::before {
  opacity: 1;
}

/* ===== PREMIUM BUTTONS - CLEAN EFFECTS ===== */
button, .btn, [class*="btn"] {
  font-family: 'Inter', sans-serif !important;
  font-weight: 500 !important;
  padding: 0.75rem 1.5rem !important;
  border-radius: 12px !important;
  border: none !important;
  cursor: pointer !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  position: relative !important;
  overflow: hidden !important;
  text-transform: none !important;
  letter-spacing: 0.01em !important;
}

/* Primary Button - Clean Emerald */
.btn-primary, button[class*="primary"], [class*="bg-emerald"], [class*="bg-green"] {
  background: linear-gradient(135deg, var(--apex-emerald-500) 0%, var(--apex-emerald-600) 100%) !important;
  color: white !important;
  box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4) !important;
}

.btn-primary:hover, button[class*="primary"]:hover {
  background: linear-gradient(135deg, var(--apex-emerald-400) 0%, var(--apex-emerald-500) 100%) !important;
  transform: translateY(-2px) !important;
}

/* Secondary Button - Glass Effect */
.btn-secondary, button[class*="outline"], [class*="variant=\"outline\""] {
  background: var(--apex-glass) !important;
  backdrop-filter: blur(10px) !important;
  color: var(--apex-text-primary) !important;
  box-shadow: inset 0 0 0 1px var(--apex-glass-border) !important;
}

.btn-secondary:hover, button[class*="outline"]:hover {
  background: var(--apex-glass-hover) !important;
  box-shadow: inset 0 0 0 1px rgba(16, 185, 129, 0.5) !important;
  color: var(--apex-emerald-400) !important;
}

/* Ghost Button */
.btn-ghost, button[class*="ghost"] {
  background: transparent !important;
  color: var(--apex-text-secondary) !important;
  padding: 0.5rem 1rem !important;
}

.btn-ghost:hover {
  background: var(--apex-glass) !important;
  color: var(--apex-emerald-400) !important;
}

/* ===== PREMIUM INPUTS - FLOATING STYLE ===== */
input, textarea, select, [class*="input"] {
  background: var(--apex-glass) !important;
  backdrop-filter: blur(10px) !important;
  border: none !important;
  border-radius: 12px !important;
  padding: 0.875rem 1.25rem !important;
  color: var(--apex-text-primary) !important;
  font-size: 0.95rem !important;
  transition: all 0.3s ease !important;
  box-shadow: inset 0 0 0 1px var(--apex-glass-border) !important;
}

input:focus, textarea:focus, select:focus {
  background: rgba(16, 185, 129, 0.05) !important;
  box-shadow: inset 0 0 0 2px rgba(16, 185, 129, 0.5) !important;
}

input::placeholder, textarea::placeholder {
  color: var(--apex-text-muted) !important;
}

/* ===== PREMIUM NAVIGATION - FLOATING SIDEBAR ===== */
nav, [class*="sidebar"], aside {
  background: var(--apex-glass) !important;
  backdrop-filter: blur(20px) !important;
  border: none !important;
  box-shadow: var(--apex-shadow-lg) !important;
}

