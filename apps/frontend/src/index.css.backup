/* Force sidebar navigation padding override */
.sidebar-nav-collapsed {
  padding-left: 0.5rem !important;
  padding-right: 0.5rem !important;
  padding-top: 0.875rem !important;
  padding-bottom: 0.875rem !important;
  width: 2.5rem !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

/* Ensure text elements are completely hidden when sidebar is collapsed */
.sidebar-nav-collapsed span:not(.sr-only),
.sidebar-nav-collapsed div:has(> span),
.sidebar-nav-collapsed div:has(> p) {
  display: none !important;
  visibility: hidden !important;
  opacity: 0 !important;
}

/* Ensure sidebar properly clips content when collapsed */
aside {
  overflow: hidden !important;
}

/* Force collapsed navigation items to be fixed width */
.sidebar-nav-collapsed {
  min-width: 2.5rem !important;
  max-width: 2.5rem !important;
}

/* Hide any potential text overflow in collapsed state */
.sidebar-nav-collapsed span,
.sidebar-nav-collapsed p,
.sidebar-nav-collapsed h1,
.sidebar-nav-collapsed h2,
.sidebar-nav-collapsed h3,
.sidebar-nav-collapsed h4,
.sidebar-nav-collapsed h5,
.sidebar-nav-collapsed h6 {
  white-space: nowrap !important;
  overflow: hidden !important;
  text-overflow: clip !important;
}

/* Ultimate text hiding solution for collapsed sidebar - preserve icons */
.sidebar-nav-collapsed span:not(.sr-only),
.sidebar-nav-collapsed .badge,
.sidebar-nav-collapsed p,
.sidebar-nav-collapsed h1,
.sidebar-nav-collapsed h2,
.sidebar-nav-collapsed h3,
.sidebar-nav-collapsed h4,
.sidebar-nav-collapsed h5,
.sidebar-nav-collapsed h6 {
  display: none !important;
  visibility: hidden !important;
  opacity: 0 !important;
  width: 0 !important;
  height: 0 !important;
  max-width: 0 !important;
  max-height: 0 !important;
  overflow: hidden !important;
  position: absolute !important;
  left: -9999px !important;
}

/* Ensure icons remain visible and properly styled */
.sidebar-nav-collapsed svg {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  width: 1.5rem !important;
  height: 1.5rem !important;
}

.nav-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 3px;
  height: 0;
  background: var(--apex-emerald-400);
  transition: height 0.3s ease;
  border-radius: 0 3px 3px 0;
}

.nav-item:hover {
  background: var(--apex-glass-hover) !important;
  color: var(--apex-text-primary) !important;
  padding-left: 1.5rem !important;
}

.nav-item:hover::before {
  height: 70%;
}

.nav-item.active, nav a.active {
  background: linear-gradient(90deg, rgba(16, 185, 129, 0.15) 0%, transparent 100%) !important;
  color: var(--apex-emerald-400) !important;
}

.nav-item.active::before {
  height: 100%;
}

/* ===== PREMIUM BADGES - CLEAN DESIGN ===== */
.badge, [class*="badge"] {
  padding: 0.375rem 0.875rem !important;
  border-radius: 20px !important;
  font-size: 0.75rem !important;
  font-weight: 600 !important;
  letter-spacing: 0.05em !important;
  border: none !important;
  backdrop-filter: blur(10px) !important;
}

.badge-success, [class*="success"] {
  background: rgba(16, 185, 129, 0.2) !important;
  color: var(--apex-emerald-400) !important;
  box-shadow: inset 0 0 20px rgba(16, 185, 129, 0.2) !important;
}

.badge-warning, [class*="warning"] {
  background: rgba(251, 191, 36, 0.2) !important;
  color: #fbbf24 !important;
  box-shadow: inset 0 0 20px rgba(251, 191, 36, 0.2) !important;
}

.badge-error, [class*="error"], [class*="danger"] {
  background: rgba(239, 68, 68, 0.2) !important;
  color: #ef4444 !important;
  box-shadow: inset 0 0 20px rgba(239, 68, 68, 0.2) !important;
}

/* ===== PREMIUM TABLES - CLEAN DESIGN ===== */
table {
  width: 100% !important;
  border-collapse: separate !important;
  border-spacing: 0 !important;
  background: transparent !important;
}

th {
  background: var(--apex-glass) !important;
  backdrop-filter: blur(10px) !important;
  padding: 1rem 1.5rem !important;
  text-align: left !important;
  font-weight: 600 !important;
  font-size: 0.875rem !important;
  color: var(--apex-text-secondary) !important;
  text-transform: uppercase !important;
  letter-spacing: 0.05em !important;
  border: none !important;
}

td {
  padding: 1.25rem 1.5rem !important;
  background: transparent !important;
  color: var(--apex-text-primary) !important;
  border: none !important;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05) !important;
}

tr {
  transition: all 0.3s ease !important;
}

tr:hover td {
  background: var(--apex-glass) !important;
}

/* ===== PREMIUM SCROLLBAR ===== */
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: rgba(16, 185, 129, 0.3);
  border-radius: 10px;
  transition: all 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(16, 185, 129, 0.5);
}

/* ===== PREMIUM ANIMATIONS ===== */
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

@keyframes gradient-shift {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

.animate-gradient {
  background-size: 200% 200%;
  animation: gradient-shift 3s ease infinite;
}

/* ===== PREMIUM STATS CARDS ===== */
.stat-card {
  background: var(--apex-glass) !important;
  backdrop-filter: blur(20px) !important;
  padding: 2rem !important;
  border-radius: 20px !important;
  position: relative !important;
  overflow: hidden !important;
  border: none !important;
}

.stat-card::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(16, 185, 129, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.stat-value {
  font-size: 2.5rem !important;
  font-weight: 700 !important;
  background: linear-gradient(135deg, #ffffff 0%, var(--apex-emerald-400) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
}

.stat-label {
  font-size: 0.875rem !important;
  color: var(--apex-text-muted) !important;
  text-transform: uppercase !important;
  letter-spacing: 0.1em !important;
  margin-top: 0.5rem !important;
}

/* ===== PREMIUM MODALS & DIALOGS ===== */
[role="dialog"], .modal, [class*="dialog"] {
  background: rgba(10, 10, 10, 0.95) !important;
  backdrop-filter: blur(20px) !important;
  border: none !important;
  border-radius: 24px !important;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.8) !important;
}

/* ===== PREMIUM TABS - NO BORDERS ===== */
[role="tablist"] {
  background: var(--apex-glass) !important;
  backdrop-filter: blur(10px) !important;
  padding: 0.25rem !important;
  border-radius: 16px !important;
  border: none !important;
}

[role="tab"], [data-state] {
  background: transparent !important;
  border: none !important;
  border-radius: 12px !important;
  padding: 0.75rem 1.5rem !important;
  color: var(--apex-text-secondary) !important;
  transition: all 0.3s ease !important;
}

[role="tab"]:hover, [data-state]:hover {
  background: rgba(255, 255, 255, 0.05) !important;
  color: var(--apex-text-primary) !important;
}

[role="tab"][aria-selected="true"], [data-state="active"] {
  background: rgba(16, 185, 129, 0.2) !important;
  color: var(--apex-emerald-400) !important;
  box-shadow: inset 0 0 20px rgba(16, 185, 129, 0.2) !important;
}

/* ===== PREMIUM TOOLTIPS ===== */
[role="tooltip"] {
  background: rgba(0, 0, 0, 0.9) !important;
  backdrop-filter: blur(10px) !important;
  border: 1px solid rgba(16, 185, 129, 0.3) !important;
  border-radius: 8px !important;
  padding: 0.5rem 0.75rem !important;
  font-size: 0.875rem !important;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5) !important;
}

/* ===== REMOVE ALL REMAINING BORDERS ===== */
* {
  border: none !important;
  outline: none !important;
}

*:focus {
  outline: none !important;
  box-shadow: none !important;
}

/* Remove any border classes */
[class*="border-"], [class*="divide-"] {
  border: none !important;
}

/* ===== PREMIUM GRADIENTS ===== */
.gradient-emerald {
  background: linear-gradient(135deg, var(--apex-emerald-400) 0%, var(--apex-emerald-600) 100%) !important;
}

.gradient-dark {
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%) !important;
}

.gradient-glass {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.02) 100%) !important;
}

/* ===== FINAL OVERRIDES ===== */
.bg-gray-800, .bg-gray-900, .bg-black {
  background: var(--apex-surface-gradient) !important;
}

.text-gray-400, .text-gray-500, .text-gray-600 {
  color: var(--apex-text-secondary) !important;
}

.text-white {
  color: var(--apex-text-primary) !important;
}

/* Force remove all Tailwind borders */
.border, .border-0, .border-2, .border-4, .border-8,
.border-t, .border-r, .border-b, .border-l,
.border-x, .border-y {
  border: none !important;
}

/* Premium focus states */
*:focus-visible {
  outline: 2px solid var(--apex-emerald-500) !important;
  outline-offset: 2px !important;
}

/* Remove focus glow from tab content */
[role="tabpanel"], [data-state], .TabsContent, [data-radix-collection-item] {
  outline: none !important;
  box-shadow: none !important;
  border: none !important;
}

/* Remove any green borders from tab content containers */
[role="tabpanel"] > div, [data-state] > div, .TabsContent > div {
  border: none !important;
  border-color: transparent !important;
  outline: none !important;
  box-shadow: none !important;
}

/* Fix green scrollbar - NUCLEAR OPTION */
* ::-webkit-scrollbar-thumb {
  background: rgba(107, 114, 128, 0.5) !important; /* Gray instead of green */
}

* ::-webkit-scrollbar-thumb:hover {
  background: rgba(107, 114, 128, 0.8) !important; /* Darker gray on hover */
}

/* Override the existing green scrollbar rule */
::-webkit-scrollbar-thumb {
  background: rgba(107, 114, 128, 0.5) !important;
  border-radius: 10px !important;
  -webkit-transition: all 0.3s ease !important;
  transition: all 0.3s ease !important;
}

/* Smooth transitions for all interactive elements */
a, button, input, textarea, select, [role="button"], [role="tab"], [role="menuitem"] {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
}

/* Navigation Styles - Removed to avoid conflicts */

.nav-item:hover {
  @apply transform scale-[1.02];
}

.nav-item:active {
  @apply transform scale-[0.98];
  transition-duration: 100ms;
}

.nav-item.active {
  @apply bg-emerald-500/10 text-emerald-400;
}

.nav-item.active::before {
  content: '';
  @apply absolute left-0 top-1/2 -translate-y-1/2 w-1 h-8 
    bg-emerald-400 rounded-r-full;
}

/* Remove any conflicting sidebar styles */
aside {
  isolation: isolate;
  height: 100vh;
  display: flex;
